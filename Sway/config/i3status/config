# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
#        color_separator = "#FFFF00"
#        output_format = "dzen2"
}

#order += "ipv6"

order += "disk /"
order += "disk /home"
order += "cpu_usage"
#order += "load"
order += "memory"
#order += "wireless _first_"
order += "ethernet _first_"
#order += "battery all"
order += "tztime local"

wireless _first_ {
        format_up = "%essid %quality %ip"
        format_down = "Wifi: down"
}

ethernet _first_ {
        format_up = " %ip (%speed) "
        format_down = "E: down"
}

battery all {
        format = "Battery %percentage"
}

disk "/" {
        format = " / %avail free "
}

disk "/home" {
        format = " /home %avail free "
}

cpu_usage {
    format = " CPU %cpu0 %cpu1 %cpu2  %cpu3 %cpu4 %cpu5 %cpu6 %cpu7 %cpu8 %cpu9 %cpu10 %cpu11 "
}

load {
        format = "%1min"
}

memory {
        #format = " Memory %percentage_used "
        format = " Memory %percentage_available free "
        threshold_degraded = "20%"
        threshold_critical = "10%"
}

tztime local {
        format = " %A, %d %b %Y %H:%M:%S"
}
